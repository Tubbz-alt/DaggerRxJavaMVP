<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.official.noowenz.daggerrxjavamvp.registerModule.view.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#D3D3D3"
            android:hint="Enter name"
            android:inputType="textCapSentences"
            android:padding="5dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#D3D3D3"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:padding="5dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#D3D3D3"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="5dp" />

        <EditText
            android:id="@+id/et_conform_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#D3D3D3"
            android:hint="Repeat Password"
            android:inputType="textPassword"
            android:padding="5dp" />

        <AutoCompleteTextView
            android:id="@+id/et_auto_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#D3D3D3"
            android:completionThreshold="1"
            android:hint="Search address"
            android:imeOptions="actionSearch"
            android:inputType="textAutoComplete|textAutoCorrect|textCapSentences"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="90dp"
            android:text="SUBMIT" />

    </LinearLayout>

</ScrollView>
